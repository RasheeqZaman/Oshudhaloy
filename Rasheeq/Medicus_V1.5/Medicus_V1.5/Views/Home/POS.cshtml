
@{
    ViewBag.Title = "POS";
}

<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Point Of Sales</h3>
        <div class="medi-button">
            <button type="button" class="btn btn-theme"><i class="fa fa-plus"></i> Add New POS</button>
            <button type="button" class="btn btn-theme02"><i class="fa fa-edit"></i> Manage POS</button>
        </div>
        <div class=pos-entry>
            <label>Customer Name</label>
            <input type="text" class="form-control round-form" autofocus>
        </div>
        <div class=pos-entry>
            <label>Date</label>
            <input type="text" class="form-control round-form" autofocus>
        </div>

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4>
                            <i class="fa fa-angle-right"></i> Invoice
                        </h4>
                        <hr>
                        <thead>
                            <tr>
                                <th>Serial no.</th>
                                <th> Medicine Name</th>
                                <th> Quantity</th>
                                <th> Sale Price/Unit</th>
                                <th> Discount/Unit</th>
                                <th> Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="hidden-phone">1</td>
                                <td class="hidden-phone"><input type="search"></td>
                                <td class="basic_table.html#"><input type="number"></td>
                                <td class="hidden-phone"><input type="Text"></td>
                                <td class="hidden-phone"><input type="Text"></td>
                                <td class="hidden-phone"><input type="Text"></td>
                                <td class="hidden-phone"> <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></td>


                            </tr>
                            <tr>
                                <td rowspan="5" colspan="5" class="hidden-phone"></td>

                                <td colspan="2" class="hidden-phone">Total Discount: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="hidden-phone">Total Tax: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="hidden-phone">Total Buy: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="hidden-phone">Paid: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2" class="hidden-phone">Due: <input type="Text" class="form-control"></td>
                            </tr>


                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
        </div>
        </div>

    </section>
</section><!-- /MAIN CONTENT -->



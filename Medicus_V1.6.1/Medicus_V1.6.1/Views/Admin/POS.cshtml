
@{
    ViewBag.Title = "POS";
}

<h2>@ViewBag.Title</h2>

    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Point Of Sales</h3>
        <div class="medi-button">
            <button type="button" class="btn btn-round"><i class="fa fa-plus"></i> Add New POS</button>
            <button type="button" class="btn btn-round"><i class="fa fa-edit"></i> Manage POS</button>
        </div>
        <div class=pos-entry>
            <label>Customer Name</label>
            <input type="text" class="form-control form-round" autofocus>
        </div>
        <div class=pos-entry>
            <label>Date</label>
            <input type="text" class="form-control form-round" autofocus>
        </div>

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> Invoice</h4>
                        <hr>

                        <thead>
                            <tr>
                                <th>Serial no.</th>
                                <th> Medicine Name</th>
                                <th> Quantity</th>
                                <th> Sale Price/Unit</th>
                                <th> Discount/Unit</th>
                                <th> Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td><input type="search"></td>
                                <td><input type="number"></td>
                                <td><input type="Text"></td>
                                <td><input type="Text"></td>
                                <td><input type="Text"></td>
                                <td> <button class="btn btn-danger btn-la"><i class="fa fa-trash-o "></i></button></td>


                            </tr>
                            <tr>
                                <td rowspan="5" colspan="4"></td>

                                <td colspan="2">Total Discount: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2">Total Tax: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2">Total Buy: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2">Paid: <input type="Text" class="form-control"></td>
                            </tr>
                            <tr>
                                <td colspan="2">Due: <input type="Text" class="form-control"></td>
                            </tr>


                        </tbody>
                    </table>
                    <div class="form-group">
                        <button type="button" class="btn btn-round btn-theme btn-primary">Save</button>
                        <button type="button" class="btn btn-round btn-theme btn-success">Save And Add Another</button>
                    </div>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->


    </section>




@model Medicus_V1._6._1.ViewData.CustomerMedicineViewData
@{
    ViewBag.Title = "MedicineList";
}

<h2>MedicineList</h2>

<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Manage Medicine</h3>
    <div class="upper-table">
        
        <div class="table-search">
            @using (Html.BeginForm("MedicineList", "Customer", FormMethod.Post))
            {
                <!--<input type="text" class="input-holder" placeholder="Search Medicine"> -->
                @Html.TextBox("keyword")
                <input type="submit" class="searchButton" value="Search">
            }
        </div>
    </div>
    <div style="height:50px"></div>
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-hover">
                <h4><i class="fa fa-angle-right"></i> Medicine List</h4>
                <thead>
                    <tr>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Serial</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Medicine Name</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Generic Name</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Supplier</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Sell Price</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Expire Date</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Category</th>

                </thead>
                <tbody>
                    <tr>

                        @foreach (var i in Model.medicineList)
                        {
                        <tr>

                            <td><a href="hidden-phone">@i.MedicineId</a></td>

                            <td class="basic_table.html#">@i.Name</td>
                            <td class="hidden-phone">@i.GenericName</td>
                            <td class="hidden-phone">Renita</td>
                            <td class="hidden-phone">@i.SellPrice</td>
                            <td class="hidden-phone">20-12-2018</td>
                            <td class="hidden-phone">@i.Catagory</td>

                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </section>



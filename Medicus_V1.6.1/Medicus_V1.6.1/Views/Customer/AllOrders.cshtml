

@model Medicus_V1._6._1.ViewData.AllOrderCustomerViewData
@{
    ViewBag.Title = "All Orders";
}

<h2>@ViewBag.Title</h2>

    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Manage Purchase</h3>
        <div class="upper-table">
            <button type="button" class="btn btn-round"><i class="fa fa-plus-circle"></i>Add Purchase</button>
            <button type="button" class="btn btn-round"><i class="fa fa-edit"></i> Edit Purchase</button>
            <div class="table-search">
                <input type="text" class="input-holder" placeholder="Search Purchase">
                <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-hover">
                    <h4><i class="fa fa-angle-right"></i> Supplier List</h4>
                    <thead>

                        <tr>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Invoice no.</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Pharmacy Name</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Quantity</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Date</th>
                            <th>Action</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var i in Model.orderList)
                            {
                            <tr>

                                <td>@i.CustomerOrderId</td>
                                <td>@i.Name</td>
                                <td>@i.Quantity</td>
                                <td>@i.OrderDate</td>


                                <td>
                                    <button class="btn btn-success btn-xs"><i class="fa fa-plus"></i></button>
                                    <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </section>

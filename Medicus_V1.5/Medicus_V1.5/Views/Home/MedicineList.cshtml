@model Medicus_V1._5.Models.HomeMediListViewData

@{
    ViewBag.Title = "Medicine List";
}

</section><!-- /MAIN CONTENT -->
<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Manage Medicine</h3>
        <div class="medi-button">
            <button type="button" class="btn btn-theme"><i class="fa fa-plus"></i> Add Medicine</button>
            <button type="button" class="btn btn-theme02"><i class="fa fa-edit"></i> Edit Medicine</button>
            <input type="text" placeholder="Serach Medicine" autofocus />
        </div>

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> Medicines</h4>
                        <hr>
                        <thead>
                            <tr>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Serial</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Medicine Name</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Generic Name</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Supplier</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Supplier Price</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Sell Price</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Expire Date</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Category</th>
                                <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Shelf</th>
                                <th>Action</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.medicineList)
                            {
                                <tr>

                                    <td><a href="hidden-phone">@i.MedicineId</a></td>

                                    <td class="basic_table.html#">@i.Name</td>
                                    <td class="hidden-phone">@i.GenericName</td>
                                    <td class="hidden-phone">Renita</td>
                                    <td class="hidden-phone">@i.SupplierPrice</td>
                                    <td class="hidden-phone">@i.SellPrice</td>
                                    <td class="hidden-phone">20-12-2018</td>
                                    <td class="hidden-phone">@i.Catagory</td>
                                    <td class="hidden-phone">
                                        <p>
                                            Shelf:J
                                            Row:5
                                        </p>
                                    </td>
                                    <td>
                                        <button class="btn btn-success btn-xs"><i class="fa fa-plus"></i></button>
                                        <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div><!-- /content-panel -->
            </div><!-- /col-md-12 -->
        </div><!-- /row -->
        </div>
        </div>

    </section>
</section><!-- /MAIN CONTENT -->
@model Medicus_V1._5.Models.Medicine

@{
    ViewBag.Title = "Order Medicine";
}
<section id="main-content">
    <section class="wrapper">

        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Order Medicine</h4>
                    @using (Html.BeginForm("OrderMedicine", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal style-form" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Medicine Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Generic Name</label>
                            <div class="col-sm-10">

                                @Html.TextBoxFor(m => m.GenericName, new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Details</label>
                            <div class="col-sm-10">

                                @Html.TextBoxFor(m => m.Details, new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Category</label>

                            <div class="col-sm-10">
                                @Html.DropDownListFor(model => model.Catagory,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "Tablet" , Text = "Tablet" },
                       new SelectListItem { Value = "Capsule" , Text = "Capsule" },
                       new SelectListItem { Value = "Syrup" , Text = "Syrup" }
                    },
                  new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Supplier Price</label>
                            <div class="col-sm-10">

                                @Html.TextBoxFor(m => m.SupplierPrice, new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Sell Price</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.SellPrice, new { @class = "form-control round-form" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-round btn-primary">Save</button>
                        <button type="submit" class="btn btn-round btn-success">Save And Add Another</button>
                    }

                </div>
            </div>




        </div>



    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->


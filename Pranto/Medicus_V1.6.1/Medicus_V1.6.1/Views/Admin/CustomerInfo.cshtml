@model Medicus_V1._6._1.ViewData.CustomerInfoViewData
@{
    ViewBag.Title = "CustomerInfo";
}

<h2>CustomerInfo</h2>


<section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Registered Customer</h3>
    <div class="upper-table">
        <div class="table-search">
            @using (Html.BeginForm("CustomerInfo", "Admin", FormMethod.Post))
            {
                <!--<input type="text" class="input-holder" placeholder="Search Medicine"> -->
                @Html.TextBox("keyword")
                <input type="submit" class="searchButton">
            }
        </div>
    </div>
    <hr />
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-hover">
                <h4><i class="fa fa-angle-right"></i> Customer List</h4>
                <thead>
                    <tr>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Customer Name</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Email</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Address</th>
                        <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Phone No.</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                        @foreach (var i in Model.customerList)
                        {
                        <tr>


                            <td class="basic_table.html#">@i.UserName</td>
                            <td class="hidden-phone">@i.Email</td>
                            <td class="hidden-phone">@i.Address</td>
                            <td class="hidden-phone">@i.PhoneNumber</td>
                            
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </section>



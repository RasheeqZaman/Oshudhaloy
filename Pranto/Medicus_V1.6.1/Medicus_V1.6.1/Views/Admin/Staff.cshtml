@model Medicus_V1._6._1.ViewData.EmployeeViewData
@{
    ViewBag.Title = "Staff";
}

<h2>@ViewBag.Title</h2>


    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Manage Medicine</h3>
        <div class="upper-table">
            <button type="button" class="btn btn-round" onclick="location.href='@Url.Action("Add Staff", "Admin")'"><i class="fa fa-plus-circle"></i>Add Medicine</button>
            <button type="button" class="btn btn-round"><i class="fa fa-edit"></i> Edit Medicine</button>
            <div class="table-search">
                @using (Html.BeginForm("Staff", "Admin", FormMethod.Post))
            {
                <!--<input type="text" class="input-holder" placeholder="Search Medicine"> -->
                    @Html.TextBox("keyword")
                    <input type="submit" class="searchButton">
                }
            </div>
        </div>
        <div class="col-md-12">
            <div class="content-panel">
                <table class="table table-striped table-hover">
                    <h4><i class="fa fa-angle-right"></i> Medicine List</h4>
                    <thead>
                        <tr>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Employee ID</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> User Name</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> PharmacyID</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Email</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> address</th>
                            <th><i class="fa fa-sort-amount-asc" aria-hidden="true"></i> Phone No.</th>

                            <th>Action</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>

                            @foreach (var i in Model.employeeList)
                            {
                            <tr>

                                <td><a href="hidden-phone">@i.EmployeeId</a></td>

                                <td class="basic_table.html#">@i.UserName</td>
                                <td class="hidden-phone">@i.PharmacyId</td>
                                <td class="hidden-phone">@i.Email</td>
                                <td class="hidden-phone">@i.Address</td>
                                <td class="hidden-phone">@i.PhoneNumber</td>

                                <td>
                                    <button class="btn btn-success btn-xs"><i class="fa fa-plus"></i></button>
                                    <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </section>




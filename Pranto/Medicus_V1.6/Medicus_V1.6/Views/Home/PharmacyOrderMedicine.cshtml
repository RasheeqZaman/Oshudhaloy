
@{
    ViewBag.Title = "PharmacyOrderMedicine";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
             <div class="content-panel">
                    <h3><i class="fa fa-angle-right"></i> Add Medicine</h3>
                    <hr>
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2">Medicine Name</label>
                            <div class="col-sm-4">
                                <input list="hosting-plan" type="text" class="form-control form-round">
                                <datalist id="hosting-plan">
                                    <option value="Tablet" />
                                    <option value="Capsule" />
                                    <option value="Syrup" />
                                </datalist>
                            </div>
                            <label class="col-sm-2">Generic Name</label>
                            <div class="col-sm-4"><input type="password" class="form-control form-round" id="inputPassword1" ></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" for="inputPassword1">Supplier Price</label>
                            <div class="col-sm-4"><input type="password" class="form-control form-round" id="inputPassword1" placeholder="Password"></div>
                            <label class="col-sm-2" for="inputPassword1">Sell Price</label>
                            <div class="col-sm-4"><input type="password" class="form-control form-round" id="inputPassword1" placeholder="Password"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" for="TextArea">Details</label>
                            <div class="col-sm-10"><textarea class="form-control" id="TextArea"></textarea></div>
                         </div>
                        <div class="form-group">
                            <label class="col-sm-2">Category</label>
                            <div class="col-sm-4">
                                <input list="hosting-plan" type="text" class="form-control form-round">
                                <datalist id="hosting-plan">
                                    <option value="Tablet" />
                                    <option value="Capsule" />
                                    <option value="Syrup" />
                                </datalist>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <button type="button" class="btn btn-round btn-theme btn-primary">Save</button>
                            <button type="button" class="btn btn-round btn-theme btn-success">Save And Add Another</button>
                            </div>
                       
                    </form>
                </div>
                </div>
            
            
        
    </section>
</section>

